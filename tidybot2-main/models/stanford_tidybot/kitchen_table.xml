<mujoco model="table">

    <asset>
        <mesh name="table_mesh" file="../assets/kitchen_table/kitchen_table.stl" scale="1 1 1"/>
    </asset>

    <worldbody>
        <body name="table" pos="1 0.0 0.8" euler="1.5708 1.5708 0">
            <!-- Visual mesh (non-collidable) -->
            <geom type="mesh" mesh="table_mesh" rgba="0.7 0.7 0.7 1" contype="0" conaffinity="0"/>

            <!-- Collision mesh with friction -->
            <geom name="table_collision" type="mesh" mesh="table_mesh" rgba="1 1 1 0"
                  contype="1" conaffinity="1" group="1" mass="1"
                  friction="3.0 0.1 0.01"  condim="3"/>
        </body>
    </worldbody>

</mujoco>
